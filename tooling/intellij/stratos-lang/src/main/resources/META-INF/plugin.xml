<idea-plugin>
    <id>stratos</id>
    <name>Stratos Language</name>
    <version>0.1.0</version>
    <vendor email="kamaukenn11@gmail.com.com" url="https://github.com/Arthur-Kamau/stratos">Stratos</vendor>

    <description><![CDATA[
   Stratos Language Plugin.<br>
    <em>Project creating</em>
    <em>Syntax highlighting</em>
    <em>Commenting code</em>
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
<!--file type recognition-->
        <fileType name="Stratos" implementationClass="lang.stratos.language.StratosFileType"
                  fieldName="INSTANCE" language="stratos" extensions="st"/>
<!--        commenting-->
        <lang.commenter language="stratos" implementationClass="lang.stratos.commentor.StratosCommenter"/>

<!--        language parser to enable highlighting,ast, psi-->
        <lang.parserDefinition language="stratos"
                               implementationClass="lang.stratos.grammer.parser.StratosParserDefinition"/>

<!--        color in setting color scheme-->
        <colorSettingsPage implementation="lang.stratos.language.StratosColorSettingsPage"/>

<!--        syntax highlighting-->
        <lang.syntaxHighlighterFactory language="stratos"
                                       implementationClass="lang.stratos.language.StratosSyntaxHighlighterFactory"/>

<!--intellij run a stratos project-->
            <configurationType implementation="lang.stratos.configuration.StratosRunConfiguration"/>

    </extensions>

    <actions>
        <!-- Add your actions here -->


        <action id="Stratos.NewFile" class="lang.stratos.action.NewStratosFileAction"
                text="Stratos File" description="Create new Stratos file">
            <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFromTemplate"/>
        </action>
    </actions>
</idea-plugin>