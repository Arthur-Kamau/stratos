<idea-plugin>
    <id>stratos</id>
    <name>Stratos Language</name>
    <vendor email="support@araizen.com" url="http://www.araizen.com">Araizen Technologies</vendor>

    <description><![CDATA[
    Stratos Language Pluguin .<br>
    <em>Support For Stratos File</em><br>
    <em>Autocompletion</em><br>
    <em>Code Navigation</em><br>
    <em>Syntax highlighting</em><br>
    <em>Code debugger </em><br>
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <!-- Add your actions here -->
        <fileType name="Stratos" implementationClass="com.araizen.stratos.files.StratosLanguageFileType"
                  fieldName="INSTANCE" language="stratos" extensions="st"/>


        <projectStructureDetector implementation="com.araizen.stratos.modules.StratosProjectStructureDetector"/>



<!--        <fileTypeFactory implementation="com.araizen.stratos.files.StratosFileTypeFactory"/>-->

    </extensions>

    <actions>

        <action id="Stratos.NewFile" class="com.araizen.stratos.action.NewStratosFileAction"
                text="Stratos File" description="Create new Stratos file">
            <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFromTemplate"/>
        </action>
    </actions>
</idea-plugin>