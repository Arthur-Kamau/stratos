<idea-plugin>
    <id>org.araizen.stratos</id>
    <name>Stratos Language</name>
    <vendor email="support@araizen.com" url="http://www.araizen.com">Araizen Technologies</vendor>

    <description><![CDATA[
    Stratos Language Pluguin .<br>
    <em>Support For Stratos File</em><br>
    <em>Autocompletion</em><br>
    <em>Code Navigation</em><br>
    <em>Syntax highlighting</em><br>
    <em>Code debugger </em><br>
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <fileType name="Stratos File" implementationClass="com.araizen.stratos.files.StratosFileType"
                  fieldName="INSTANCE" language="Stratos" extensions="st"/>
        <fileTypeFactory implementation="com.araizen.stratos.files.StratosFileTypeFactory"/>

    </actions>
</idea-plugin>