<idea-plugin>
  <version>1.0-SNAPSHOT</version>
  <change-notes>
      Add change notes here.&lt;br&gt;
      &lt;em&gt;most HTML tags may be used&lt;/em&gt;</change-notes>
  <idea-version since-build="202.6397" until-build="202.*"/>
  <id>stratos</id>
  <name>Stratos Language</name>
  <vendor email="support@araizen.com" url="http://www.araizen.com">Araizen Technologies</vendor>
  <description>
    Stratos Language Pluguin .&lt;br&gt;
    &lt;em&gt;Support For Stratos File&lt;/em&gt;&lt;br&gt;
    &lt;em&gt;Autocompletion&lt;/em&gt;&lt;br&gt;
    &lt;em&gt;Code Navigation&lt;/em&gt;&lt;br&gt;
    &lt;em&gt;Syntax highlighting&lt;/em&gt;&lt;br&gt;
    &lt;em&gt;Code debugger &lt;/em&gt;&lt;br&gt;
    </description>
  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.modules.lang</depends>
  <extensions defaultExtensionNs="com.intellij">
    <fileType name="Stratos" implementationClass="com.araizen.stratos.files.StratosLanguageFileType" fieldName="INSTANCE" language="stratos" extensions="st"/>
    <projectStructureDetector implementation="com.araizen.stratos.modules.StratosProjectStructureDetector"/>
  </extensions>
  <actions>
    <action id="Stratos.NewFile" class="com.araizen.stratos.action.NewStratosFileAction" text="Stratos File" description="Create new Stratos file">
      <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFromTemplate"/>
    </action>
  </actions>
</idea-plugin>
