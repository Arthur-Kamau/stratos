{
    "name": "stratos-language",
    "displayName": "Stratos Language ",
    "description": "stratos language support.",
    "icon": "icons/images.jpg",
    "publisher": "arthurKamau",
    "version": "0.1.2",
    "engines": {
        "vscode": "^1.45.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "activationEvents": [
		"onLanguage:stratos"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "languages": [{
            "id": "stratos",
            "aliases": ["Stratos", "stratos"],
            "extensions": [".sts",".st",".srt"],
            "configuration": "./language-configuration.json"
        }],
        "commands": [
			{
				"command": "extension.runApplication",
				"title": "Run Application"
			}
		],
        "grammars": [{
            "language": "stratos",
            "scopeName": "source.stratos",
            "path": "./syntaxes/stratos.tmLanguage.json"
        }],
        
        "snippets": [
            {
                "language": "stratos",
                "path": "./snippets/stratos.json"
            }
        ]
    }, 
	"keywords": [
		"Stratos",
		"Stratos-language",
		"vscode",
		"vscode-extension",
		"vscode-language"
	],
	"bugs": {
		"url": "https://github.com:Arthur-Kamau/stratos/issues"
	},
	"homepage": "https://github.com:Arthur-Kamau/stratos#readme",
    "repository": {
		"type": "git",
		"url": "git+https://github.com:Arthur-Kamau/stratos.git"
    },
    "scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "^12.12.0",
		"@types/vscode": "^1.34.0",
		"@typescript-eslint/eslint-plugin": "^3.0.2",
		"@typescript-eslint/parser": "^3.0.2",
		"eslint": "^7.1.0",
		"typescript": "^4.0.2"
	}
}