{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Stratos",
	"patterns": [
		{ "include": "#comments" },
		{ "include": "#strings" },
		{ "include": "#keywords" },
		{ "include": "#storage" },
		{ "include": "#constants" },
		{ "include": "#support" },
		{ "include": "#functions" },
		{ "include": "#types" },
		{ "include": "#operators" },
		{ "include": "#punctuation" }
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"begin": "//",
					"end": "$",
					"name": "comment.line.double-slash.stratos"
				},
				{
					"begin": "/\*",
					"end": "\*/",
					"name": "comment.block.stratos"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"begin": "\"",
					"end": "\"",
					"name": "string.quoted.double.stratos",
					"patterns": [
						{ "match": "\\.", "name": "constant.character.escape.stratos" }
					]
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"match": "\\b(if|else|while|for|return|when|break|continue)\\b",
					"name": "keyword.control.stratos"
				},
				{
					"match": "\\b(use|namespace|import|as)\\b",
					"name": "keyword.other.import.stratos"
				},
				{
					"match": "\\b(class|interface|struct|enum|constructor)\\b",
					"name": "keyword.declaration.stratos"
				},
				{
					"match": "\\b(fn)\\b",
					"name": "keyword.function.stratos"
				},
				{
					"match": "\\b(true|false|None|Some|null)\\b",
					"name": "constant.language.stratos"
				},
				{
					"match": "\\b(this|super)\\b",
					"name": "variable.language.stratos"
				}
			]
		},
		"storage": {
			"patterns": [
				{
					"match": "\\b(var|val)\\b",
					"name": "storage.type.variable.stratos"
				},
				{
					"match": "\\b(mut)\\b",
					"name": "storage.modifier.stratos"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"match": "\\b(int|double|string|bool|void|unit|any|Optional)\\b",
					"name": "support.type.primitive.stratos"
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"match": "\\b([A-Za-z_][A-Za-z0-9_]*)(?=\\()",
					"name": "entity.name.function.stratos"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"match": "\\b[0-9]+(\\.[0-9]+)?\\b",
					"name": "constant.numeric.stratos"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"match": "(\|>|\?:|\?\.|==|!=|<=|>=|<|>|\+|\-|\*|/|%|=|\+=|\-=)",
					"name": "keyword.operator.stratos"
				}
			]
		},
		"punctuation": {
			"patterns": [
				{
					"match": "\{|\}|\(|\)|;|,|\.|:",
					"name": "punctuation.stratos"
				}
			]
		}
	},
	"scopeName": "source.stratos"
}