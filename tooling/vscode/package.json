{
    "name": "stratos-language",
    "displayName": "Stratos Language",
    "description": "Language support for Stratos",
    "version": "0.1.1",
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Programming Languages",
        "Themes"
    ],
    "activationEvents": [
        "onLanguage:stratos"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [{
            "id": "stratos",
            "aliases": ["Stratos", "stratos"],
            "extensions": [".st"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "stratos",
            "scopeName": "source.stratos",
            "path": "./syntaxes/stratos.tmLanguage.json"
        }],
        "snippets": [
            {
                "language": "stratos",
                "path": "./snippets/stratos.json"
            }
        ],
        "themes": [
            {
                "label": "Stratos Dark",
                "uiTheme": "vs-dark",
                "path": "./themes/stratos-dark-theme.json"
            }
        ],
        "configuration": {
            "title": "Stratos",
            "properties": {
                "stratosLanguageServer.compilerPath": {
                    "type": "string",
                    "default": "",
                    "description": "Path to the Stratos compiler executable. Leave empty to auto-detect."
                },
                "stratosLanguageServer.maxNumberOfProblems": {
                    "type": "number",
                    "default": 1000,
                    "description": "Maximum number of problems to report."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p .",
        "watch": "tsc -w -p ."
    },
    "devDependencies": {
        "@types/vscode": "^1.75.0",
        "@types/node": "^16.11.7",
        "typescript": "^4.9.0"
    },
    "dependencies": {
        "vscode-languageclient": "^8.1.0",
        "vscode-languageserver": "^8.1.0",
        "vscode-languageserver-textdocument": "^1.0.8"
    }
}