{
    "name": "stratos-language",
    "displayName": "Stratos Language",
    "description": "Language support for Stratos",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:stratos"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [{
            "id": "stratos",
            "aliases": ["Stratos", "stratos"],
            "extensions": [".st"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "stratos",
            "scopeName": "source.stratos",
            "path": "./syntaxes/stratos.tmLanguage.json"
        }],
        "snippets": [
            {
                "language": "stratos",
                "path": "./snippets/stratos.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w"
    },
    "devDependencies": {
        "@types/vscode": "^1.75.0",
        "@types/node": "^16.11.7",
        "typescript": "^4.9.0"
    },
    "dependencies": {
        "vscode-languageclient": "^8.1.0"
    }
}
